<persistence
        version="2.1"
        xmlns="http://xmlns.jcp.org/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
http://xmlns.jcp.org/xml/ns/persistence_2_1.xsd">
    <persistence-unit name="WebShop"> <!-- имя единицы хранения   -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider
        </provider> <!-- в качестве провайдера JPA выступает Hibernate  -->
        <!--        <jta-data-source>myDS</jta-data-source>-->
        <class>by.it.academy.entity.Product</class> <!-- хранимые классы   -->
        <class>by.it.academy.entity.User</class> <!-- хранимые классы   -->
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties> <!-- набор свойств  -->
            <!--            <property-->
            <!--                    name="javax.persistence.schema-generation.database.action"-->
            <!--                    value="drop-and-create"/>--> <!-- создает и удалеяет БД   -->
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.id.new_generator_mappings" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/jpaWeb"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="Qwety5"/>
        </properties>
    </persistence-unit>
</persistence>